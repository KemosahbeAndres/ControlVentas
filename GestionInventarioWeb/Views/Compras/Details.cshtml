@model GestionInventarioWeb.Models.Compra

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="hstack gap-2">
    <h2>Detalles Orden de Compra</h2>
    <a class="btn btn-dark" asp-action="Index">Volver atras</a>
    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model?.Id">Editar</a>
    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model?.Id">Borrar</a>
</div>

<div class="container-fluid">
    <dl class="row">
        <dt class="col-sm-2">
            ID
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Fecha)
        </dt>
        <dd class="col-sm-10">
            @Model.Fecha.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Generada por
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdUsuarioNavigation.Nombre)
        </dd>
        <dt class="col-sm-2">
            Total
        </dt>
        <dd class="col-sm-10">
            $0
        </dd>
    </dl>
</div>

<div class="container-fluid">
    <h2>Productos</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Codigo EAN</th>
                <th>Nombre</th>
                <th>Categoria</th>
                <th>Descripcion</th>
                <th>Precio</th>
                <th>Cantidad</th>
            </tr>
        </thead>
        <tbody id="tblBody"></tbody>
    </table>
</div>
