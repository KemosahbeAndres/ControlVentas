@model GestionInventarioWeb.Models.Compra

@{
    ViewData["Title"] = "Borrando Compra";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="topbar hstack gap-2">
    <h2>Borrar Compra</h2>
</div>

<div class="container-fluid">
    <h4>¿Deseas eliminar este registro?</h4>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-2">
                    ID
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Id)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Fecha)
                </dt>
                <dd class="col-sm-10">
                    @Model.Fecha.ToShortDateString()
                </dd>
                <dt class="col-sm-2">
                    Generada por
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IdUsuarioNavigation.Nombre)
                </dd>
            </dl>
    
            <form class="btn-group" asp-action="DeleteConfirmed" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Borrar" class="btn btn-danger" />
                <a class="btn btn-primary" asp-action="Details" asp-route-id="@Model.Id">Cancelar</a>
            </form>
        </div>
    </div>
</div>
