@model GestionInventarioWeb.Models.Usuario?
@{
    ViewData["Title"] = "Recuperando contraseña";
}

<div class="container-fluid">

    <h1>Cambiando contraseña</h1>
    <p>¿Seguro deseas cambiar la contraseña?</p>

    <hr />
    <div class="row">
        <div class="col-8">
            @using (Html.BeginForm("ConfirmarCambio", "Usuarios", FormMethod.Post))
            {
                <input type="hidden" asp-for="Id" name="id" />

                <div class="input-group">
                    <label class="input-group-text">Nombre</label>
                    <input asp-for="Nombre" class="form-control" id="name" disabled />
                </div>
                <div class="input-group">
                    <label class="input-group-text">Rut</label>
                    <input asp-for="Rut" class="form-control" name="username" id="username" disabled />
                </div>
                <div class="input-group">
                    <label class="input-group-text">Contraseña</label>
                    <input asp-for="Clave" id="pwd" type="password" name="password" class="form-control" />
                </div>
                <div class="input-group">
                    <label class="input-group-text">Confirma Contraseña</label>
                    <input type="password" name="confirmpwd" class="form-control" />
                </div>
                <div class="btn-group">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-danger btn-padding">Cancelar</a>
                </div>
            }
        </div>
    </div>
</div>

<script defer>
    document.querySelector("#pwd").addEventListener("input", function (e) {
        this.value = this.value.replace(/( )/g, "")
    })
</script>