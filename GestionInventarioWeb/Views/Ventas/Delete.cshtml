@model GestionInventarioWeb.Models.Venta

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    
    <h1>Borrar Venta</h1>
    <hr />

    <h3>Deseas borrar esta venta?</h3>
    
    <hr />
    <div>
        <dl class="row">
            <dt class = "col-sm-2">
                ID
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Id)
            </dd>
            <dt class = "col-sm-2">
                FECHA
            </dt>
            <dd class = "col-sm-10">
                @Model.Fecha.ToShortDateString()
            </dd>
            <dt class = "col-sm-2">
                Vendedor
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.IdVendedorNavigation.Nombre)
            </dd>
        </dl>
    
        <form asp-action="DeletingSale" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="btn-group">
                <input type="submit" value="Borrar" class="btn btn-danger" />
                <a class="btn btn-primary" asp-action="Details" asp-route-id="@Model.Id">Cancelar</a>
            </div>
        </form>
    </div>

</div>