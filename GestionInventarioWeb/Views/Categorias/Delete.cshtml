@model GestionInventarioWeb.Models.Categoria

@{
    ViewData["Title"] = "Eliminado Categoria";
}

<div class="container-fluid">
    <h2>Categoria</h2>
    <hr />
    <h3>¿Deseas eliminar esta categoria?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                ID
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Id)
            </dd>
            <dt class = "col-sm-2">
                Categoria
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Categoria1)
            </dd>
        </dl>
    
        <form class="row" asp-action="DelettingCategory" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="btn-group col-md-6">
                <input type="submit" value="Borrar" class="btn btn-danger" />
                <a class="btn btn-primary" asp-action="Details" asp-route-id="@Model.Id">Cancelar</a>
            </div>
        </form>
    </div>
</div>